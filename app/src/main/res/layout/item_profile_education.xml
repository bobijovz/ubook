<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_profile_education"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:id="@+id/linear_profile_education"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/text_profile_education_school_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:drawableLeft="@drawable/ic_school_black_18dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_school_black_18dp"
                android:text="Ateneo De Manila University"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_profile_education_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_label_black_18dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_label_black_18dp"
                android:text="Diploma in Window Cleaning, Windows Technology." />

            <TextView
                android:id="@+id/text_profile_education_grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_grade_black_18dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_grade_black_18dp"
                android:text="96%" />

            <TextView
                android:id="@+id/text_profile_education_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_grade_black_18dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_date_range_black_18dp"
                android:text="2016" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>