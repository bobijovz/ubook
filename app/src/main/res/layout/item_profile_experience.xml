<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_profile_experience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:id="@+id/linear_profile_experience"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/text_profile_experience_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:drawableLeft="@drawable/ic_work_black_18dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_work_black_18dp"
                android:text="Window Cleaner"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_profile_experience_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_label_black_18dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_label_black_18dp"
                android:text="Kikimburg's Funeral Homes" />

            <TextView
                android:id="@+id/text_profile_experience_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_date_range_black_18dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_date_range_black_18dp"
                android:text="July 2016" />

            <TextView
                android:id="@+id/text_profile_experience_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_location_on_black_18dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_location_on_black_18dp"
                android:text="Philippines" />

            <TextView
                android:id="@+id/text_profile_experience_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/ic_label_black_18dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_label_black_18dp"
                android:text="Cleaning of windows from 1st floor to 54th floor" />


        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>